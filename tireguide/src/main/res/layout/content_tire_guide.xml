<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TireGuideActivity"
    tools:showIn="@layout/app_bar_tire_guide">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profileText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/profiles"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/profileEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/profile_name"
            android:hint="@string/profile_name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:maxLength="32"
            android:minHeight="@dimen/touch_target"
            android:nextFocusDown="@+id/riderTypeSpinner"
            android:nextFocusForward="@+id/riderTypeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/profileText"
            app:layout_constraintTop_toBottomOf="@+id/profileText" />

        <TextView
            android:id="@+id/riderTypeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:text="@string/rider_type"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileEdit" />

        <Spinner
            android:id="@+id/riderTypeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/profileEdit"
            android:nextFocusDown="@+id/bodyWeightEdit"
            android:nextFocusForward="@+id/bodyWeightEdit"
            app:layout_constraintStart_toStartOf="@+id/profileText"
            app:layout_constraintTop_toBottomOf="@+id/riderTypeText" />

        <TextView
            android:id="@+id/weightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:text="@string/weights"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/weightUnitsText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/riderTypeSpinner" />

        <TextView
            android:id="@+id/weightUnitsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:text="@string/lbs"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/weightText"
            app:layout_constraintStart_toEndOf="@+id/weightText"
            app:layout_constraintTop_toTopOf="@+id/weightText" />

        <EditText
            android:id="@+id/bodyWeightEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:autofillHints="@string/body_weight"
            android:hint="@string/body_weight"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/riderTypeSpinner"
            android:nextFocusDown="@+id/bikeWeightEdit"
            android:nextFocusForward="@+id/bikeWeightEdit"
            app:layout_constraintEnd_toStartOf="@+id/bikeWeightEdit"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weightText" />

        <EditText
            android:id="@+id/bikeWeightEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/bike_weight"
            android:hint="@string/bike_weight"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/bodyWeightEdit"
            android:nextFocusDown="@+id/frontWidthSpinner"
            android:nextFocusForward="@+id/frontWidthSpinner"
            app:layout_constraintStart_toStartOf="@+id/rearWidthText"
            app:layout_constraintTop_toBottomOf="@+id/weightText" />

        <TextView
            android:id="@+id/tireWidthsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:text="@string/tire_width"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bodyWeightEdit" />

        <TextView
            android:id="@+id/frontWidthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/front"
            android:textAppearance="?android:textAppearanceMedium"
            app:layout_constraintBottom_toBottomOf="@+id/frontWidthSpinner"
            app:layout_constraintEnd_toStartOf="@+id/frontWidthSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frontWidthSpinner" />

        <Spinner
            android:id="@+id/frontWidthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:focusable="true"
            android:hint="@string/tire_width"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/bikeWeightEdit"
            android:nextFocusDown="@+id/rearWidthSpinner"
            android:nextFocusForward="@+id/rearWidthSpinner"
            app:layout_constraintStart_toEndOf="@+id/frontWidthText"
            app:layout_constraintTop_toBottomOf="@+id/tireWidthsText" />

        <TextView
            android:id="@+id/frontWidthUnitsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/millimeters"
            app:layout_constraintBaseline_toBaselineOf="@+id/frontWidthText"
            app:layout_constraintStart_toEndOf="@+id/frontWidthSpinner" />

        <TextView
            android:id="@+id/rearWidthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16"
            android:text="@string/rear"
            android:textAppearance="?android:textAppearanceMedium"
            app:layout_constraintBaseline_toBaselineOf="@+id/frontWidthText"
            app:layout_constraintStart_toEndOf="@+id/frontWidthUnitsText"
            app:layout_constraintTop_toBottomOf="@+id/tireWidthsText" />

        <Spinner
            android:id="@+id/rearWidthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:focusable="true"
            android:hint="@string/rear"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/frontWidthSpinner"
            android:nextFocusDown="@+id/frontLoadEdit"
            android:nextFocusForward="@+id/frontLoadEdit"
            app:layout_constraintStart_toEndOf="@+id/rearWidthText"
            app:layout_constraintTop_toBottomOf="@+id/tireWidthsText" />

        <TextView
            android:id="@+id/rearWidthUnitsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/millimeters"
            app:layout_constraintBaseline_toBaselineOf="@+id/rearWidthText"
            app:layout_constraintStart_toEndOf="@+id/rearWidthSpinner" />

        <TextView
            android:id="@+id/loadText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:text="@string/tire_load"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rearWidthSpinner" />

        <EditText
            android:id="@+id/frontLoadEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/front"
            android:hint="@string/front"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/rearWidthSpinner"
            android:nextFocusDown="@+id/frontLoadUnitsSpinner"
            android:nextFocusForward="@+id/frontLoadUnitsSpinner"
            app:layout_constraintEnd_toStartOf="@+id/frontLoadUnitsSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadText" />

        <Spinner
            android:id="@+id/frontLoadUnitsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/frontLoadEdit"
            android:nextFocusDown="@+id/rearLoadEdit"
            android:nextFocusForward="@+id/rearLoadEdit"
            app:layout_constraintBottom_toBottomOf="@+id/frontLoadEdit"
            app:layout_constraintStart_toEndOf="@+id/frontLoadEdit"
            app:layout_constraintTop_toTopOf="@+id/frontLoadEdit" />

        <EditText
            android:id="@+id/rearLoadEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/rear"
            android:hint="@string/rear"
            android:imeOptions="actionGo"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/frontLoadUnitsSpinner"
            android:nextFocusDown="@+id/rearLoadUnits"
            android:nextFocusForward="@+id/rearLoadUnits"
            app:layout_constraintEnd_toStartOf="@+id/rearLoadUnits"
            app:layout_constraintStart_toEndOf="@+id/frontLoadUnitsSpinner"
            app:layout_constraintStart_toStartOf="@+id/rearWidthText"
            app:layout_constraintTop_toBottomOf="@+id/loadText" />

        <Spinner
            android:id="@+id/rearLoadUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:minHeight="@dimen/touch_target"
            android:nextFocusUp="@+id/rearLoadEdit"
            android:nextFocusDown="@+id/calculateButton"
            android:nextFocusForward="@+id/calculateButton"
            app:layout_constraintBottom_toBottomOf="@+id/rearLoadEdit"
            app:layout_constraintStart_toEndOf="@+id/rearLoadEdit"
            app:layout_constraintTop_toTopOf="@+id/rearLoadEdit" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:background="@color/colorAccent"
            android:nextFocusUp="@+id/rearLoadUnits"
            android:text="@string/calculate"
            android:textColor="@android:color/primary_text_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frontLoadEdit" />

        <TextView
            android:id="@+id/RecommendedTirePressureText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:text="@string/recommended_tire_pressure"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" />

        <TextView
            android:id="@+id/frontTireText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_4"
            android:text="@string/front_tire"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecommendedTirePressureText" />

        <TextView
            android:id="@+id/frontTirePressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintBaseline_toBaselineOf="@+id/frontTireText"
            app:layout_constraintEnd_toStartOf="@+id/frontTireUnitsText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/rearWidthText" />

        <TextView
            android:id="@+id/frontTireUnitsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_4"
            android:text="@string/psi"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintBaseline_toBaselineOf="@+id/frontTirePressure"
            app:layout_constraintStart_toEndOf="@+id/frontTirePressure" />

        <TextView
            android:id="@+id/rearTireText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rear_tire"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frontTireText" />

        <TextView
            android:id="@+id/rearTirePressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintBaseline_toBaselineOf="@+id/rearTireText"
            app:layout_constraintEnd_toEndOf="@+id/frontTirePressure"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/frontTirePressure" />

        <TextView
            android:id="@+id/rearTireUnitsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/psi"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_constraintBaseline_toBaselineOf="@+id/rearTirePressure"
            app:layout_constraintStart_toStartOf="@+id/frontTireUnitsText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
